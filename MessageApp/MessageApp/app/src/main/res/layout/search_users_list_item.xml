<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chats_list_item_height"
    android:layout_marginVertical="@dimen/default_margin_small"
    android:paddingHorizontal="@dimen/default_margin_small">

    <ImageView
        android:id="@+id/search_item_avatar"
        android:layout_width="@dimen/chats_list_item_height"
        android:layout_height="@dimen/chats_list_item_height"
        android:src="@drawable/avatar_image_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_small"
        android:text="@string/dummy_name"
        android:textColor="@color/black"
        android:textSize="@dimen/chat_list_item_username_size"
        app:layout_constraintStart_toEndOf="@+id/search_item_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_item_profession"
        android:layout_width="252dp"
        android:layout_height="15dp"
        android:text="@string/dummy_profession"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_item_avatar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/default_margin_small"/>



</androidx.constraintlayout.widget.ConstraintLayout>